<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arabellaprivat.tanzderfunktionen.activities.MainActivity">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/willkommen"
        android:textSize="50sp"
        android:textAlignment="center" />

    <Button
        android:text="Anleitung"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:id="@+id/anleitung"
        android:textSize="36sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"
        android:textAllCaps="false"
        android:background="@color/btnColor"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Spiel fortsetzen"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="53dp"
        android:id="@+id/weiterspielen"
        android:textSize="36sp"
        android:textAllCaps="false"
        android:background="@color/btnColor"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/start"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Neustart"
        android:layout_width="150px"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:textSize="36sp"
        android:layout_marginBottom="77dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/btnColor"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/anleitung"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="500px"
        android:layout_height="400px"
        app:srcCompat="@drawable/tanz_der_funktionen"
        android:layout_below="@+id/willkommen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

</RelativeLayout>
