<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spiel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.arabellaprivat.tanzderfunktionen.activities.Spiel">


    <TextView
        android:id="@+id/level"
        android:text="Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/level"
        />

    <TextView
        android:id="@+id/functionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnBack"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <Button
        android:id="@+id/next"
        android:text="Weiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/check"
        android:background="@drawable/border_style"
        android:padding="10dp"/>

    <Button
        android:id="@+id/check"
        android:text="Prüfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:background="@drawable/border_style"
        android:padding="10dp"/>

    <Button
        android:id="@+id/delete"
        android:text="Löschen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/check"
        android:layout_alignBottom="@+id/check"
        android:layout_marginLeft="170dp"
        android:background="@drawable/border_style"
        android:padding="10dp"/>

    <Button
        android:id="@+id/draw"
        android:text="Fertig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="300dp"
        android:background="@drawable/border_style"
        android:padding="10dp"/>

    <Button
        android:id="@+id/info"
        android:text="i"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:background="@drawable/circle_style"
        android:backgroundTint="@color/btnBack"
        android:textColor="@android:color/background_light" />

    <com.example.arabellaprivat.tanzderfunktionen.checkAndDraw.Hilfspunkte
        android:id="@+id/hilfspunkte"
        android:layout_width="568px"
        android:layout_height="400px"
        android:background="@drawable/coordinate_blank"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/functionText"
        android:layout_marginTop="10dp"/>

    <com.example.arabellaprivat.tanzderfunktionen.checkAndDraw.Zeichenfläche
        android:id="@+id/zeichenfläche"
        android:layout_width="568px"
        android:layout_height="400px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/functionText"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/number"
        android:textSize="36sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_below="@+id/hilfspunkte"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
