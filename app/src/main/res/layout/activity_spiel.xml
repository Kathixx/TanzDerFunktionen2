<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spiel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.arabellaprivat.tanzderfunktionen.activities.Spiel">


    <TextView
        android:id="@+id/level"
        android:text="Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/functionText"
        android:layout_alignStart="@+id/level" />

    <TextView
        android:id="@+id/functionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textColor="@android:color/holo_blue_bright"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/check"
        android:text="Prüfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/functionText"
        android:layout_marginStart="33dp"
        android:soundEffectsEnabled="false"
        android:backgroundTint="@color/btnColor"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/delete"
        android:text="Löschen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/check"
        android:layout_alignBottom="@+id/check"
        android:layout_toStartOf="@+id/functionText"
        android:layout_marginEnd="46dp"
        android:backgroundTint="@color/btnColor"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/draw"
        android:text="Fertig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="164dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/functionText"
        android:layout_marginStart="33dp"
        android:backgroundTint="@color/btnColor"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/info"
        android:text="i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:backgroundTint="@color/btnColor"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/review"
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_above="@+id/next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <com.example.arabellaprivat.tanzderfunktionen.checkAndDraw.Hilfspunkte
        android:id="@+id/hilfspunkte"
        android:layout_width="568px"
        android:layout_height="400px"
        android:background="@drawable/coordinate_blank"
        android:layout_alignTop="@+id/zeichenfläche"
        android:layout_alignParentEnd="true" />

    <com.example.arabellaprivat.tanzderfunktionen.checkAndDraw.Zeichenfläche
        android:id="@+id/zeichenfläche"
        android:layout_width="568px"
        android:layout_height="400px"
        android:layout_above="@+id/review"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="114dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level"
        android:layout_alignParentEnd="true"
        android:id="@+id/number"
        android:textSize="36sp" />

    <TextView
        android:text="Punktestand: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp_score"
        android:textSize="30sp"
        android:layout_alignTop="@+id/number"
        android:layout_toStartOf="@+id/number" />

    <Button
        android:id="@+id/next"
        android:text="Weiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/btnColor"
        android:layout_above="@+id/check"
        android:layout_alignStart="@+id/review"
        android:textColor="@android:color/background_light" />

</RelativeLayout>
