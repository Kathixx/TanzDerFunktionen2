<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bewertung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:isIndicator="true"
    tools:context="com.example.arabellaprivat.tanzderfunktionen.activities.Bewertung">


    <View
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/background"
        android:background="@android:color/white"
        android:layout_below="@+id/review"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:text="Nochmal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/border_style"
        android:padding="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/review"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Du erhÃ¤lst"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/review"
            android:layout_marginTop="50dp"
            />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="110dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text1"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="von 500 Punkten"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/score"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/points"
        android:textAlignment="center"
        android:layout_below="@+id/text2"
        android:layout_alignParentStart="true" />


</RelativeLayout>
